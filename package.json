{
  "name": "atcoder-cli",
  "version": "1.0.0",
  "description": "AtCoder command line tools",
  "scripts": {
    "build": "npm run clean && tsc && webpack --mode production",
    "clean": "rimraf bin src/**/*.{js,d.ts}",
    "watch:tsc": "tsc --watch",
    "watch:webpack": "webpack --mode development --watch",
    "watch": "tsc && npm-run-all -p watch:*",
    "prepare": "npm run build"
  },
  "bin": {
    "acc": "bin/index.js"
  },
  "files": [
    "bin/",
    "schema/",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "atcoder"
  ],
  "author": "Tatamo",
  "license": "BSD-3-Clause",
  "dependencies": {
    "ajv": "^6.6.1",
    "axios": "^0.18.0",
    "commander": "^2.19.0",
    "conf": "^2.1.0",
    "fs-extra": "^7.0.1",
    "inquirer": "^6.2.1",
    "jsdom": "^13.0.0",
    "mkdirp": "^0.5.1",
    "query-string": "^6.2.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/conf": "^1.4.0",
    "@types/fs-extra": "^5.0.4",
    "@types/inquirer": "0.0.43",
    "@types/jsdom": "^12.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/query-string": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
